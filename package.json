{
  "name": "simple-speak",
  "description": "Powerful wrapper around the browser Web Speech API | Â© Nick Freear, 28-May-2017.",
  "version": "1.0.0-alpha",
  "license": "MIT",
  "author": {
    "name": "Nick Freear {@nfreear}"
  },
  "main": "./index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/nfreear/simple-speak"
  },
  "dependencies": {
    "jquery": "^2.2.4"
  },
  "devDependencies": {
    "browserify": "^14.4.0",
    "csslint": "^1.0.5",
    "exorcist": "^0.4.0",
    "jsdom": "^9.12.0",
    "replace": "^0.3.0",
    "semistandard": "^11.0.0",
    "uglify-js": "^3.0.14",
    "xo": "^0.18.2"
  },
  "scripts": {
    "build": "node src/_ver.js && browserify index.js -i jquery --debug | exorcist build/simple-speak.js.map > build/simple-speak.js",
    "build-min": "uglifyjs build/simple-speak.js --comments=/^[!\\*]/ -mco build/simple-speak.min.js",
    "x-build": "browserify -i jquery src/*.orig.js -o bundle.js",
    "test": "semistandard && csslint style/ test/style/",
    "osx-say-hi": "say -v vicki Hello, Im simple-speak.",
    "osx-voices": "say -v '?'",
    "xo": "xo"
  },
  "semistandard": {
    "ignore": "build/"
  }
}
